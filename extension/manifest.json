{
  "manifest_version": 3,
  "name": "Security Analyzer",
  "version": "1.0",
  "description": "Анализирует безопасность сайтов с помощью нейросети",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}